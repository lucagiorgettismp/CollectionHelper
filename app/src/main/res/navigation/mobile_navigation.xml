<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_missing_list">

    <fragment
        android:id="@+id/navigation_missing_list"
        android:name="com.lucagiorgetti.surprix.ui.missinglist.MissingListFragment"
        android:label="@string/title_missing_list"
        tools:layout="@layout/fragment_missing_list" />

    <fragment
        android:id="@+id/navigation_double_list"
        android:name="com.lucagiorgetti.surprix.ui.doublelist.DoubleListFragment"
        android:label="@string/title_double_list"
        tools:layout="@layout/fragment_double_list" />

    <fragment
        android:id="@+id/navigation_catalog"
        android:name="com.lucagiorgetti.surprix.ui.catalog.CatalogFragment"
        android:label="@string/title_catalog"
        tools:layout="@layout/fragment_catalog" >
        <action
            android:id="@+id/producerSelectedAction"
            app:destination="@id/navigation_year" />
    </fragment>
    <fragment
        android:id="@+id/navigation_year"
        android:name="com.lucagiorgetti.surprix.ui.year.YearFragment"
        android:label="Years"
        tools:layout="@layout/fragment_year" >
        <argument
            android:name="producer_id"
            app:argType="string" />
        <argument
            android:name="producer_name"
            app:argType="string" />
        <action
            android:id="@+id/yearSelectedAction"
            app:destination="@id/navigation_set_list" />
    </fragment>
    <fragment
        android:id="@+id/navigation_set_list"
        android:name="com.lucagiorgetti.surprix.ui.setlist.SetListFragment"
        android:label="Sets"
        tools:layout="@layout/fragment_set_list">
        <argument
            android:name="year_id"
            app:argType="string" />
        <action
            android:id="@+id/setSelectedAction"
            app:destination="@id/navigation_set_detail"
            app:popUpTo="@+id/navigation_set_list"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/navigation_set_detail"
        android:name="com.lucagiorgetti.surprix.ui.setdetail.SetDetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_set_detail">
        <argument
            android:name="set_id"
            app:argType="string" />
    </fragment>
</navigation>