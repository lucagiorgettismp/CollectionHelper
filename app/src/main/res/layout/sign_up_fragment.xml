<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.loginfragments.signin.SignInFragment">
    <ImageView
        android:layout_above="@id/form_layout"
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:tint="@color/logo"
        app:srcCompat="@drawable/ic_logo" />

    <LinearLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="@string/email"/>
        <EditText
            style="@style/UserFormEditText"
            android:id="@+id/edit_reg_email"
            android:drawableEnd="@drawable/ic_mail"
            android:hint="@string/your_email"
            android:inputType="textEmailAddress" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"
            android:text="@string/username"/>
        <EditText
            style="@style/UserFormEditText"
            android:drawableEnd="@drawable/ic_person_black"
            android:id="@+id/edit_reg_username"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890_"
            android:hint="@string/choose_your_username"
            android:inputType="textFilter"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/password_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/textColor"
                android:text="@string/password"/>
            <EditText
                style="@style/UserFormEditText"
                android:id="@+id/edit_reg_password"
                android:drawableEnd="@drawable/ic_key"
                android:hint="********"
                android:inputType="textPassword" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/textColor"
            android:text="@string/country"/>

        <EditText
            android:id="@+id/edit_reg_nation"
            style="@style/UserFormEditText"
            android:clickable="true"
            android:focusable="true"
            android:hint="@string/select_your_country"
            android:imeOptions="actionNext"
            android:inputType="textAutoComplete"
            android:nextFocusRight="@+id/login_button"
            android:drawableEnd="@drawable/ic_flag"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textAllCaps="false"
            android:text="@string/sign_up"
            style="@style/RoundedButton"
            android:textColor="@android:color/background_light"/>
    </LinearLayout>
</RelativeLayout>