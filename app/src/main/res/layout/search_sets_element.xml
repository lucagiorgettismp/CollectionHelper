<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardBackground"
        app:cardCornerRadius="1dp"
        app:cardElevation="2dp"><![CDATA[>

        ]]>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_set_elem_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp"
                    android:text="NOME"
                    android:textAllCaps="true"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textColorHighlight="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbl_prod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="8dp"
                    android:text="PRODUTTORE"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/lbl_season"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="35"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="8dp"
                    android:text="PERIODO"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/lbl_setyear"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="8dp"
                    android:text="ANNO"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/lbl_setnation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="25"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="8dp"
                    android:text="PROVENIENZA"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txv_set_elem_producer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="10dp"
                    android:text="PRODUTTORE"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txv_set_elem_season"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="35"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="10dp"
                    android:text="STAG."
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txv_set_elem_year"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="10dp"
                    android:text="ANNO"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txv_set_elem_nation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="25"
                    android:gravity="center_vertical|center"
                    android:paddingLeft="10dp"
                    android:text="NAZIONE"
                    android:textSize="18sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgSet"
                android:layout_width="match_parent"
                android:layout_height="126dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


