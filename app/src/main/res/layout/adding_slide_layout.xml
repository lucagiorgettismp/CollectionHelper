<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="40sp"
        android:paddingEnd="20sp"
        android:paddingStart="20sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/onboarding_icon"
            android:paddingEnd="10sp"
            android:paddingStart="10sp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/onboard_adding" />

        <TextView
            android:id="@+id/add_missing"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20sp"
            android:layout_marginTop="15sp"
            android:text="@string/add_to_missings"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/add_double"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_alignStart="@+id/add_missing"
            android:layout_marginBottom="55sp"
            android:layout_marginEnd="20sp"
            android:text="@string/add_to_doubles"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </RelativeLayout>

</LinearLayout>