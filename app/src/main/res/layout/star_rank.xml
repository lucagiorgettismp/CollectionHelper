<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/star_1_on"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_star_full"
        app:tint="@color/surpriseActionAccent" />

    <ImageView
        android:id="@+id/star_1_off"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        app:srcCompat="@drawable/ic_star_empty"
        app:tint="@color/surpriseActionAccent" />

    <ImageView
        android:id="@+id/star_2_on"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_star_full"
        app:tint="@color/surpriseActionAccent" />

    <ImageView
        android:id="@+id/star_2_off"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        app:srcCompat="@drawable/ic_star_empty"
        app:tint="@color/surpriseActionAccent" />

    <ImageView
        android:id="@+id/star_3_on"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_star_full"
        app:tint="@color/surpriseActionAccent" />

    <ImageView
        android:id="@+id/star_3_off"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        app:srcCompat="@drawable/ic_star_empty"
        app:tint="@color/surpriseActionAccent" />
</LinearLayout>