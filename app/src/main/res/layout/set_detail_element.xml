<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:id="@+id/set_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9.92"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_item_titlebar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv_item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:gravity="center_vertical"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="@string/description"
                    android:textColor="@color/com_facebook_button_background_color_focused"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/com_facebook_button_background_color_focused" />

                <TextView
                    android:id="@+id/txv_item_code"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:text="@string/code"
                    android:textColor="@color/com_facebook_button_background_color_focused"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_item"
                android:layout_width="78dp"
                android:layout_height="96dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/surprise_image"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageButton
                    android:id="@+id/btn_item_add_double"
                    style="@style/ButtonAddDouble"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:contentDescription="@string/add_to_doubles"
                    android:tint="@color/cardview_light_background"
                    app:srcCompat="@drawable/ic_double" />

                <ImageButton
                    android:id="@+id/btn_item_add_missing"
                    style="@style/ButtonAddMissing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="60"
                    android:contentDescription="@string/add_to_missings"
                    android:tint="@color/com_facebook_button_background_color_focused"
                    app:srcCompat="@drawable/ic_missings" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>