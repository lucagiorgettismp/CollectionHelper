<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/img_surp_elem"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                app:srcCompat="@drawable/ic_logo_shape_primary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="75"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_surp_elem_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txv_surp_elem_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <View
                    android:id="@+id/layout_surp_elem_titlebar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_surp_elem_star_1_on"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:tint="@color/colorPrimary"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_star_full" />

                    <ImageView
                        android:id="@+id/img_surp_elem_star_1_off"
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_star_empty" />

                    <ImageView
                        android:id="@+id/img_surp_elem_star_2_on"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:tint="@color/colorPrimary"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_star_full" />

                    <ImageView
                        android:id="@+id/img_surp_elem_star_2_off"
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_star_empty" />

                    <ImageView
                        android:id="@+id/img_surp_elem_star_3_on"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:tint="@color/colorPrimary"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_star_full" />

                    <ImageView
                        android:id="@+id/img_surp_elem_star_3_off"
                        android:layout_width="22dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:tint="@color/colorPrimary"
                        app:srcCompat="@drawable/ic_star_empty" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/show_owners_btn"
                            style="@style/ButtonShowMissingOwner"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:scaleType="centerInside"
                            android:tint="@android:color/white"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_double" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/txv_surp_elem_set"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="TextView"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txv_surp_elem_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="TextView"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textColor"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/txv_surp_elem_producer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="60"
                        android:text="TextView"
                        android:textColor="@color/textColor" />

                    <TextView
                        android:id="@+id/txv_surp_elem_nation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="40"
                        android:text="TextView"
                        android:textAlignment="textEnd"
                        android:textColor="@color/textColor" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/missing_bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:background="@drawable/round_corner_rectangle">

                <EditText
                    android:id="@+id/note_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="Note"
                    android:inputType="textMultiLine"
                    android:textColor="@color/textColor"
                    android:textColorHint="#653C3F41"
                    android:textColorLink="@color/colorSecondary"
                    android:textSize="14sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/save_note_btn"
                    style="@style/ButtonSaveNote"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    android:filterTouchesWhenObscured="false"
                    android:fitsSystemWindows="false"
                    android:scaleType="centerInside"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_save" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

