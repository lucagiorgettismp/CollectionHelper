<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/doubles_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/surprise"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/doubles_dialog_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/who_have_what_you_miss"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/doubles_dialog_empty_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/nobody_have_what_you_miss"
        android:textAlignment="center"
        android:textSize="16sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/doubles_dialog_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>