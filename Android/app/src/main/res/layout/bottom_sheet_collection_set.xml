<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottomsheet_background"
    android:orientation="vertical"
    android:padding="8dp"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_reset"
            style="@style/TextAppearance.Surprix.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_btn"
            android:textColor="@color/surpriseActionAccent"
            app:icon="@drawable/ic_delete"
            app:iconTint="@color/surpriseActionAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

    <TextView
        style="@style/TextAppearance.Surprix.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_completion" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/filter_category_completion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>