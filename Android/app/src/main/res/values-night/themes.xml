<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Surprix" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/surprixBlue</item>
        <item name="colorPrimaryVariant">@color/surprixBlueVariant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/surprixOrange</item>
        <item name="colorSecondaryVariant">@color/surprixOrange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/grey10</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/toolbarColor</item>

        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>
</resources>
